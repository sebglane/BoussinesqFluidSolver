# Listing of Parameters
# ---------------------
subsection Time stepping settings
  # Time step after which adaptive time stepping is applied.
  set adaptive_timestep_barrier = 1

  # Initial time step.
  set dt_initial                = 2e-1

  # Maximum time step.
  set dt_max                    = 1e+0

  # Maximum time step.
  set dt_min                    = 1e-6

  # Final time.
  set final_time                = 1.0

  # Maximum number of time steps.
  set n_steps                   = 5

  # Activate verbose output.
  set verbose                   = true
end


